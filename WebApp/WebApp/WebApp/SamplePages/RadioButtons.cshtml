@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "RadioButton Sample";
    //global variables
    string language = Request.Form["LanguageGroup"];
    string script = Request.Form["ScriptGroup"];
}

@section banner {<h3>Form Using RadioButtons</h3>}

@* setup my processing code*@
@if (IsPost)
{
    //did User actually select a radio button
    if (language.IsEmpty() || script.IsEmpty())
    {
        <p><spans style="color:firebrick">Make a selection from both programs and coding.</spans></p>
        language = "";
        script = "";
    }
    else
    {
        if (language.Equals("C#", StringComparison.OrdinalIgnoreCase))
        {
            <p>You will greatly enjoy the CPSC1517 course as we use C#.</p>
        }
        else
        {
            <p>Too bad. Unfortunately the CPSC1517 course does not use @language</p>
        }

        if (script.Equals("RAZOR", StringComparison.OrdinalIgnoreCase))
        {
            <p>You will greatly enjoy the CPSC1517 course as we use Razor.</p>
        }
        else
        {
            <p>Too bad. Unfortunately the CPSC1517 course does not use @script</p>
        }
    }
}
else
{
    //the else is a great place to do initialization to your form for the 1st pass
    language = "";
    script = "";
}
<form id="theForm" method="post">
    <div class="row">
        <div class="offset-1">
            <label for="LanguageGroup">Select your favorite programming language</label><br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="C#" checked="@(language.Equals("C#")?true:false)"/>C#<br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="Cobol" checked="@(language.Equals("Cobol")?true:false)"/>Cobol<br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="VB" checked="@(language.Equals("VB")?true:false)"/>Visual Basic<br />
            <input type="radio" name="LanguageGroup" id="LanguageGroup" value="Fortran" checked="@(language.Equals("Fortran")?true:false)"/>Fortran<br />
            <br />
            <label for="ScriptGroup">Select your favorite scripting code</label><br />
            <input type="radio" name="ScriptGroup" id="ScriptGroup" value="JS" checked="@(script.Equals("JS")?true:false)"/>Javascript<br />
            <input type="radio" name="ScriptGroup" id="ScriptGroup" value="Razor" checked="@(script.Equals("Razor")?true:false)"/>Razor<br />
            <input type="radio" name="ScriptGroup" id="ScriptGroup" value="PHP" checked="@(script.Equals("PHP")?true:false)"/>PHP<br />
        </div>
    </div>
    <div class="row">
        <div class="offset-2">
            <button type="submit" name="theButton" id="theButton" value="submit">Submit</button>
        </div>
    </div>
</form>